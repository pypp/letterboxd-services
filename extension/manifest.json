{
  "manifest_version": 3,
  "name": "Letterboxd Services",
  "description": "Letterboxd extension that provides you torrents for movies.",
  "version": "0.7.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://letterboxd.com/film/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://letterboxd.com/film/*"
      ],
      "js": [
        "src/content.js",
        "src/services.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}